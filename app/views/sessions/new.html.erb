
<div class="container text-center">
<%= image_tag "coffeetalk.png", height: 100 %>
  <div class="row top-10">
    <div class="col-8">
        <div class="card chatbox-height">
            <div class="card-body">
                <div class="formatting text-format">
                    <%= form_for(:session, html: {role: "form"}, url: login_path) do |f| %>
                        <%= f.label :username, "Username/Email", class: "form-label" %>
                        <%= f.text_field :username, placeholder: "Enter your Username/Email", class: "form-control" %>
                        <%= f.label :password, "Password", class: "form-label" %>
                        <%= f.password_field :password, placeholder: "Enter your Password",class: "form-control" %><br />
                        <%= f.button "Login", class: "btn btn-dark" %>
                    <% end %>
                </div>
                    
            </div>
</div>
    </div>
    <div class="col-4">
        <div class="card chatbox-height">
            <ul class="list-group list-group-flush formatting">
                <button type="button" class="btn btn-dark">Sign up</button>
            </ul>
        </div>
    </div>
  </div>
</div>
