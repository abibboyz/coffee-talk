<% flash.each do |message_type, message_content| %>
  <div class="alert alert-<%= message_type %> alert-dismissible fade show text-center" id="alert" role="alert">
    <%= message_content %>
    <button type="button" class="close" data-dismiss="alert" id="close" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>